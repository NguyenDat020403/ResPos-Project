<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/rounded_item_detail"
    android:orientation="vertical"
    android:paddingHorizontal="5dp"
    android:paddingTop="10dp"
    android:layout_marginBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imvItemPhoto"
            android:layout_weight="1"
            android:src="@drawable/image1"
            android:layout_width="0dp"
            android:layout_height="60dp"/>
        <LinearLayout
            android:paddingStart="10dp"
            android:layout_weight="4"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:ignore="RtlSymmetry">
            <TextView
                android:id="@+id/txtItemName"
                android:text="Bún bò Huế"
                android:fontFamily="@font/barlowmedium"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txtItemPrice"
                android:text="$ 5.3"
                android:fontFamily="@font/barlowmedium"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imvRemoveItem"
                android:layout_gravity="center"
                android:src="@drawable/outline_remove_24"
                android:layout_width="16dp"
                android:layout_height="16dp"/>

            <TextView
                android:id="@+id/txtItemQty"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/border_note_order"
                android:fontFamily="@font/barlowmedium"
                android:gravity="center"
                android:paddingHorizontal="14dp"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imvAddItem"
                android:src="@drawable/baseline_add_24"
                android:layout_gravity="center"
                android:layout_width="16dp"
                android:layout_height="16dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center_vertical"
                android:id="@+id/txtItemTotal"
                android:text="1"
                android:fontFamily="@font/barlowmedium"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:weightSum="11"
        android:paddingBottom="8dp"
        android:paddingTop="5dp"
        android:paddingHorizontal="5dp"
        android:id="@+id/noteItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/edtnoteItemOrder"
            android:layout_weight="9"
            android:autofillHints="Order note..."
            android:padding="8dp"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:hint="Order note..."
            android:textColorHint="#927272"
            android:fontFamily="@font/barlowmedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border_note_order"/>
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="40dp">
            <ImageView
                android:id="@+id/imvRemoveItemOrder"
                android:background="@drawable/border_trash"
                android:padding="5dp"
                android:src="@drawable/trash"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>