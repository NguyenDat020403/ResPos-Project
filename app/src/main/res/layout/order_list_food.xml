<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#1F1D2B"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imvItemPhoto"
            android:layout_weight="1"
            android:src="@drawable/image1"
            android:layout_width="20dp"
            android:layout_height="60dp"/>
        <LinearLayout
            android:layout_weight="4"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtItemName"
                android:text="Bún bò Huế"
                android:fontFamily="@font/barlowmedium"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txtItemPrice"
                android:text="$ 5.3"
                android:fontFamily="@font/barlowmedium"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imvRemoveItem"
                android:layout_gravity="center"
                android:src="@drawable/outline_remove_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_margin="5dp"
                android:gravity="center"
                android:padding="10dp"
                android:background="@drawable/border_note_order"
                android:id="@+id/txtItemQty"
                android:text="1"
                android:fontFamily="@font/barlowmedium"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/imvAddItem"
                android:src="@drawable/baseline_add_24"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center_vertical"
                android:id="@+id/txtItemTotal"
                android:text="1"
                android:fontFamily="@font/barlowmedium"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:weightSum="11"
        android:id="@+id/noteItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_margin="5dp"
            android:id="@+id/noteItemOrder"
            android:layout_weight="9"
            android:autofillHints="Order note..."
            android:padding="15dp"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:hint="Order note..."
            android:textColorHint="#927272"
            android:fontFamily="@font/barlowmedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border_note_order"/>
        <ImageView
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/imvRemoveItemOrder"
            android:background="@drawable/border_trash"
            android:padding="10dp"
            android:layout_weight="2"
            android:src="@drawable/trash"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>