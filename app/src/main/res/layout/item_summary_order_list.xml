<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/rounded_item_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:paddingHorizontal="20dp"
    android:paddingVertical="10dp">
        <ImageView
            android:id="@+id/imvItemSummaryPhoto"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/image1"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"/>

        <!-- Item name and price layout -->
        <LinearLayout
            android:weightSum="20"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="6"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txtItemSummaryName"
                    android:text="Bún bò Huế"
                    android:fontFamily="@font/barlowmedium"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtItemSummaryPrice"
                    android:text="$ 5.3"
                    android:fontFamily="@font/barlowmedium"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Quantity TextView -->
            <TextView
                android:layout_weight="2"
                android:id="@+id/txtItemSummaryQty"
                android:text="1"
                android:gravity="center"
                android:padding="10dp"
                android:fontFamily="@font/barlowmedium"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="10dp"/>

            <!-- Total price TextView -->
            <TextView
                android:layout_marginRight="10dp"
                android:background="@drawable/border_note_order"
                android:layout_weight="3"
                android:id="@+id/txtItemSummaryTotal"
                android:text="1"
                android:padding="10dp"
                android:gravity="end"
                android:fontFamily="@font/barlowmedium"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>

            <!-- Order note TextView -->
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/baseline_edit"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
            <TextView
                android:maxLines="2"
                android:id="@+id/txtnoteItemSummaryOrder"
                android:autofillHints="Order note..."
                android:padding="10dp"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textColorHint="#927272"
                android:fontFamily="@font/barlowmedium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

    </LinearLayout>

