<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái được chọn -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF6D6D" /> <!-- Màu nền của item được chọn -->
            <corners android:radius="5dp" /> <!-- Bo góc cho item -->
            <padding android:left="16dp" android:right="16dp" />
        </shape>
    </item>

    <!-- Trạng thái không được chọn -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Màu nền trong suốt -->
            <corners android:radius="5dp" /> <!-- Bo góc cho item không được chọn -->
            <padding android:left="16dp" android:right="16dp" />
        </shape>
    </item>
</selector>


